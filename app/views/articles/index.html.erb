<h1 align="center">List of articles</h1>

<% @articles.each do |a| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article_title">
           <%= link_to a.title, article_path(a) %>
        </div>
        <div class="article_body">
          <%= truncate(a.description, length: 150) %>
          <div class="article-meta-details">
            <small>
              Created by: <%= a.user.username if a.user %>, 
              <%= time_ago_in_words(a.created_at) %> ago,
              last updated <%= time_ago_in_words(a.updated_at) %> ago
            </small>
          </div>
        </div>
        <div class="article-actions">
          <%= link_to "Edit article", edit_article_path(a), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this article", article_path(a), class: "btn btn-xs btn-danger", 
                                                      method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
      </div>
    </div>
  </div>
<% end %>
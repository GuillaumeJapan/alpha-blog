<h1 align="center">List of articles in the category <%= @category.name %></h1>

<% if logged_in? && current_user.admin? %>
  <div class="row">
    <div class="col-sm-2 col-sm-offset-5 badge">
      <%= link_to "Edit category name", edit_category_path(@category) %>
    </div>
  </div>
<% end %>

<%= render 'articles/article', articles: @category_articles %>